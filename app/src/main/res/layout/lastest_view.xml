<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray">

    <TextView
        android:id="@+id/tvLatestMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Latest Movies"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/cvLastestFilms"
        app:layout_constraintTop_toTopOf="parent" />

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/cvLastestFilms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:fillColor="#FFFFFFFF"
        app:layout_constraintBottom_toTopOf="@id/gl60"
        app:layout_constraintLeft_toRightOf="@id/gl25"
        app:layout_constraintRight_toRightOf="@id/gl75"
        app:layout_constraintTop_toBottomOf="@id/tvLatestMovies"
        app:pageColor="#00000000"
        app:radius="4dp"
        app:strokeColor="#FF777777"
        android:background="@color/light_gray"
        app:strokeWidth="1dp" />

    <android.support.constraint.Guideline
        android:id="@+id/gl60"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".8" />

    <android.support.constraint.Guideline
        android:id="@+id/gl25"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".15" />

    <android.support.constraint.Guideline
        android:id="@+id/gl75"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".85" />
</android.support.constraint.ConstraintLayout>



